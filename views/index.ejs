<% blogs.forEach(function(blog) { %>
<a href="/blogs/<%= blog._id %>">
    <div class ="ui center aligned segment text container">
    <h2> <%- blog.title %> </h2>
    <img class ="ui medium centered image indexMarginBottomSm" src="<%= blog.image %>" >
    <span class=""> <%= blog.created.toDateString() %> </span>
   
    <p class="indexMarginBottomSm"> <%- blog.body.substring(0,60) %>...</p> 
    <a href="/blogs/<%= blog._id %>" class="ui button grey ">Read More </a>
    </div>
<% }) %>
